<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    android:background="@color/colorWhite"
    android:paddingRight="@dimen/tiny_padding"
    android:paddingLeft="@dimen/small_padding"
    android:layout_marginTop="@dimen/tiny_padding">

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="@dimen/normal_padding"
        android:layout_height="@dimen/normal_padding"
        android:layout_marginTop="@dimen/tiny_padding"
        android:checked="false"
        android:button="@drawable/sel_cb" />
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:text="1"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:textSize="@dimen/txt_text"
        android:textColor="@color/colorDeepGray"
        android:textStyle="bold"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="eojfwojfwe jeowfjwof fewofjweojfwef foewjfowiejfe dsjfjsdoifjs fweojfweof weofjewo fw jfeowijf ewf wjeofj wefew fweoijf ewofw ewfiojwe fwe"
        android:textSize="@dimen/txt_text"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDeepGray"
        android:hint="@string/q_basic_answerhint"
        android:layout_marginRight="@dimen/small_padding"
        android:layout_marginLeft="@dimen/small_padding"
        />

    <ImageView
        android:id="@+id/btn_clear"
        android:layout_width="@dimen/big_padding"
        android:layout_height="@dimen/big_padding"
        android:src="@drawable/ic_clear"
        android:tint="@color/colorGray"


        />



</LinearLayout>