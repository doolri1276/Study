<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snownaul.study.Activities.StudyStudyingPageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.StudyingToolbar"
        >

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/ad"
        android:layout_margin="@dimen/normal_padding"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_padding"
            android:background="@color/colorLighterSkyBlue"
            />

        <View
            android:id="@+id/percentage"
            android:layout_width="130dp"
            android:layout_height="@dimen/small_padding"
            android:background="@color/colorDeepSkyBlue"
/>

        <include layout="@layout/q3_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/percentage"/>

    </RelativeLayout>

    <View
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#efefef"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


    <View
        android:id="@+id/adline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@id/ad"
        android:background="@color/colorLightGray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
