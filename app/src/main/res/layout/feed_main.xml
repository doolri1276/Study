<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_prof"
                android:layout_width="@dimen/feed_prof"
                android:layout_height="@dimen/feed_prof"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/normal_padding"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDeepGray"
                    android:text="Name Surname"
                    android:textSize="@dimen/txt_stext"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="@dimen/txt_stext"
                    android:textColor="@color/colorGray"/>

            </LinearLayout>
            
            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="@dimen/big_padding"
                android:layout_height="@dimen/big_padding"
                android:src="@drawable/ic_menu_v"
                android:tint="@color/colorGray"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/normal_padding"
            />

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingBottom="@dimen/normal_padding"
            android:paddingRight="@dimen/normal_padding"
            android:text="jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw jeofjw ofjew ofje eiof jewo fjew feji ofje ofw"
            android:maxLines="5"
            android:textColor="@color/colorDeepGray"
            android:textSize="@dimen/txt_text"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/normal_padding"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingBottom="@dimen/normal_padding">
            <ToggleButton
                android:id="@+id/tb_favor"
                android:layout_width="@dimen/normal_padding"
                android:layout_height="@dimen/normal_padding"
                android:background="@drawable/sel_feed_favor"
                android:textOn=""
                android:textOff=""

                />

            <TextView
                android:id="@+id/tv_liked_cnt"
                android:layout_width="@dimen/huge_padding"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="@dimen/txt_stext"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="@dimen/small_padding"/>

            <ToggleButton
                android:id="@+id/tb_comment"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/sel_feed_comment"
                android:textOn=""
                android:textOff=""
                android:enabled="false"
                />

            <TextView
                android:id="@+id/tv_comment_cnt"
                android:layout_width="@dimen/huge_padding"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23"
                android:textSize="@dimen/txt_stext"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="9dp"/>

            <ToggleButton
                android:id="@+id/tb_bookmark"
                android:layout_width="@dimen/normal_padding"
                android:layout_height="@dimen/normal_padding"
                android:background="@drawable/sel_feed_bookmark"
                android:textOn=""
                android:textOff=""

                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"
            />

    </LinearLayout>

</RelativeLayout>