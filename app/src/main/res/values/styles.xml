<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDeepSkyBlue</item>
        <item name="colorPrimaryDark">@color/colorDeepSkyBlue</item>
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDeepSkyBlue</item>
        <item name="colorPrimaryDark">@color/colorDeepSkyBlue</item>
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="AppTheme.StudyingPage" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBase</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="AppTheme.Toolbar">

        <item name="android:background">@color/colorDeepSkyBlue</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.StudyingToolbar">

        <item name="android:background">@color/colorBase</item>
        <item name="titleTextColor">@color/colorDeepGray</item>
    </style>

    <style name="test_answer_n">
        <item name="android:textColor">@color/colorDeepGray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="test_answer_w">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="test_answer_r">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
